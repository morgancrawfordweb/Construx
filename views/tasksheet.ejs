<%- include('partials/header') -%>


    <main class="container">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/createTaskSheet" enctype="multipart/form-data" method="POST">
                    <div class="mb-3">
                        <label for="task" class="form-label">Task Title</label>
                        <h5>*For Example: Grading Inspection Duties</h5>
                        <input type="text" class="form-control" id="taskTitle" name="taskTitle">
                    </div>
                    <div class="mb-3">
                        <label for="task" class="form-label">Task Name</label>
                        <h5>*For Example: Ensured wires were trimmed</h5>
                        <input type="text" class="form-control" id="taskName" name="taskName">
                    </div>                     
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </section>
        </div>
    </main>      

<%- include('partials/footer') -%>