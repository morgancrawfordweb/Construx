<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>Grid with Buttons</title>
</head>
<body>
  <div class="grid">
    <!-- Buttons on the right for adding and deleting columns -->
    <div class="buttons-column">
      <button class="add-column">Add Column</button>
      <button class="delete-column">Delete Column</button>
    </div>

    <!-- Grid container for rows and cells -->
    <div class="grid-container">
      <!-- Grid cells -->
      <div class="grid-cell"></div>
      <div class="grid-cell"></div>
      <!-- Add more cells here -->
    </div>
  </div>

  <!-- Button at the bottom for adding and deleting rows -->
  <div class="buttons-row">
    <button class="add-row">Add Row</button>
    <button class="delete-row">Delete Row</button>
  </div>

  <script src="script.js"></script>
</body>
</html>