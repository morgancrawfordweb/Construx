<%- include('partials/header') -%>

<body class="text-gray antialiased">
  <main>
    <section class="absolute w-full h-full">
      <div
        class="sign-in-background-image top-0 w-full h-full bg-green"
        style="background-image: url(./img/Sign-In-Background.png); background-size: cover; background-repeat: no-repeat;background-position: center;"
      ></div>
      
      <div class="container mx-auto px-4 h-full">
        <div class="flex content-center items-center justify-center h-full">
          <div class="w-full lg:w-4/12 px-4">
            <div
              class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0"
            >
              <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
                <div class="text-gray-500 text-center mb-3 font-bold">
                  <h1>Company Sign-In</h1>
                </div>
                <div>
                  <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
                    messages.info.forEach( el => { %>
                    <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %> <% } %>
                <!-- StartofForm -->
                <form action="/companyLogin" method="POST">
                  <div class="relative w-full mb-3">
                    <label
                      class="block uppercase text-gray-700 text-xs font-bold mb-2 form-label"
                      for="grid-password"
                      >Company Email</label
                    ><input
                      type="companyEmail"
                      class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full form-control"
                      placeholder="Email"
                      style="transition: all 0.15s ease 0s;"
                      name="companyEmail"
                    />
                  </div>
                  <div class="relative w-full mb-3">
                    <label
                      class="block uppercase text-gray-700 text-xs font-bold mb-2 form-label"
                      for="grid-password"
                      >Password</label
                    ><input
                      type="password"
                      class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full form-control"
                      placeholder="Password"
                      style="transition: all 0.15s ease 0s;"
                      name="password"
                    />
                  </div>
                  <div class="text-center mt-6">
                    <button
                      class="bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full"
                      type="submit"
                      style="transition: all 0.15s ease 0s;"
                    >
                      Sign In
                    </button>
                  </div>
                </form>
              </div>
              </div>
            </div>
            <div class="flex flex-wrap mt-6">
              <div class="w-1/2">
                <a href="#" class="text-gray-300"
                  ><small>Forgot password?</small></a
                >
              </div>
              <div class="w-1/2 text-right">
                <a href="#" class="text-gray-300"
                  ><small>Create new account</small></a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="absolute w-full bottom-0 bg-gray-900 pb-6">
        <div class="container mx-auto px-4">
          <hr class="mb-6 border-b-1 border-gray-700" />
          <div
            class="flex flex-wrap items-center md:justify-between justify-center"
          >
            </div>
          </div>
        </div>
      </footer>
    </section>
  </main>
</body>
<%- include('partials/footer') -%>
