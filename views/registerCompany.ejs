<%- include('partials/header') -%>


    <main class="container">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/registerCompany" method="POST">

                      <div class="mb-3">
                        <label for="name" class="form-label">Company Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                      </div>

                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="companyEmail">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>

                    <div class="mb-3">
                      <p>This number should be created by your employer and given to you. This will give you access to all of the company documents. Due to security reasons we are currently un-able to recover this number if it is forgotten. Please keep this safe!</p><br>

                      <span>You may use this generated companyId provided:   <b><%= generatedId %></b></span>
                      <br/>
                      
                      
                      <br/>
                      <label for="companyId" class="form-label">Company ID</label>
                      <input type="text" class="form-control" id="companyId" name="companyId">
                    </div>

                    <div class="mb-3">
                      <label for="confirmCompanyId" class="form-label">Confirm Company Id</label>
                      <input type="password" class="form-control" id="confirmCompanyId" name="confirmCompanyId">
                  </div>
                    

                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="password" name="password">
                      <span>Password must be at least 8 characters long</span>
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </section>
        </div>
    </main>
    

<%- include('partials/footer') -%>