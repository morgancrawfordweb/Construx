<%- include('partials/header') -%>
    <main class="container">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/company/companySignup" method="POST">
                    <div class="mb-3">
                        <label for="companyName" class="form-label">Company Name</label>
                        <input type="text" class="form-control" id="companyName" name="companyName">
                      </div>
                      <div class="mb-3">
                        <label for="address" class="form-label">Physical Address</label>
                        <input type="text" class="form-control" id="address" name="address">
                      </div>
                    <div class="mb-3">
                      <label for="phoneNumber" class="form-label">Phone Number</label>
                      <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber">
                    </div>
                    <div class="mb-3">
                      <label for="emailAddress" class="form-label">Email Address</label>
                      <input type="text" class="form-control" id="emailAddress" name="emailAddress">
                    </div>
                    <div class="mb-3">
                      <label for="companyId" class="form-label">Company ID Number</label>
                      <input type="password" class="form-control" id="companyId" name="companyId">
                      <span>Note** This is the number that you will be handing your employees to see the same documents as your other employees.</span>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="companyPassword" name="companyPassword">
                    </div>
                    <div class="mb-3">
                      <label for="confirmPassword" class="form-label">Confirm Password</label>
                      <input type="password" class="form-control" id="confirmCompanyPassword" name="confirmCompanyPassword">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </section>
        </div>
    </main>
    

<%- include('partials/footer') -%>